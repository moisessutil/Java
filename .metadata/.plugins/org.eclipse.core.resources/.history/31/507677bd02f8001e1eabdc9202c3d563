package curso_programacao;

import java.util.Scanner;

public class while_ {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite um número:");
		int x = sc.nextInt();
		
		while (x != 0) {
			System.out.println("Digite um número:");
			x = sc.nextInt();
		}
		
		sc.close();
	}

}
